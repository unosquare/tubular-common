{
    "compilerOptions": {
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "lib": ["es5", "es6", "dom"],
        "declaration": true,
        "sourceMap": true,
        "target": "ES2023",
        "skipLibCheck": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["./test/**/*.*", "./node_modules"]
}
